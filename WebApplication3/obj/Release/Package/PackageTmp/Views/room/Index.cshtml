@model IEnumerable<WebApplication3.Models.room>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div id="content-wrapper">
    <div class="container-fluid">


        <div class="card mb-3">
            <div class="card-header">

                <h4><i class="fas fa-table"></i></h4> <br />

                <div class="card-header">


                    <a class="btn btn-primary mx-4" href="/room/Create/">Yeni Ekle</a>
                </div>


                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ODA TÜRÜ</th>
                                    <th>ODA FOTOĞRAFI</th>
                                    <th>AÇIKLAMA</th>
                                    <th>ÜCRET</th>


                                    <th>İŞLEMLER</th>

                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.Başlık</td>
                                        <td>
                                            <img src="@item.Resim" width="250" height="100" />
                                        </td>
                                        <td>@item.Açıklama</td>
                                        <td>@item.Fiyat</td>


                                        <td>
                                            <a href="/room/Edit/@item.id" class="btn btn-success">Düzenle</a>|
                                            <a href="/room/Delete/@item.id" class="btn btn-danger"> Sil</a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>