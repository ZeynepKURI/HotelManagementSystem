@model WebApplication3.Models.room
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div id="content-wrapper">
    <div class="container-fluid">

        <div class="card mb-3">
            <div class="card-header">

                <h4><i class="fas fa-table"></i></h4> <br />

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("Edit", "room", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <table class="table table-bordered" width="100%" cellspacing="0">



                            <tr>

                                <td>ODA TÜRÜ</td>
                                <td>

                                    @Html.TextBoxFor(x => x.Başlık, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Başlık)
                                </td>
                            </tr>

                            <tr>
                                <td>ODA DOTOĞRAFI</td>
                                <td>


                                    <div class="col-md-10">
                                        <input type="file" name="Resim" accept=".jpg,.png,.jpeg" class="form-control" />
                                        @Html.ValidationMessageFor(model => model.Resim, "", new { @class = "text-danger" })
                                    </div>

                                </td>
                            </tr>
                            <tr>
                                <td>AÇIKLAMA</td>
                                <td>
                                    @Html.TextBoxFor(x => x.Açıklama, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Açıklama)
                                </td>
                            </tr>
                            <tr>
                                <td>ÜCRET</td>
                                <td>
                                    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Fiyat)
                                </td>
                            </tr>





                        </table>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Kaydet</button>
                                <button class="btn btn-danger" type="button"><a href="/room/Index">İptal</button>
                            </div>

                        </div>
                    }
                </div>


            </div>
        </div>
    </div>
</div>