@model IEnumerable<WebApplication3.Models.galeri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div id="content-wrapper">
    <div class="container-fluid">

        <div class="card mb-3">
            <div class="card-header">

                <h4><i class="fas fa-table"></i>About</h4> <br />
                <div class="card-header">


                    <a class="btn btn-primary mx-4" href="/Galeri/Create/">Yeni Ekle</a>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>

                                    <th>Resim</th>

                                    <th>İşlemler</th>

                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            <img src="@item.resim" width="150" height="100" />
                                        </td>
                                        <td>

                                            <a href="/Galeri/Edit/@item.id" class="btn btn-success">Düzenle</a>| <a href="/Galeri/Delete/@item.id" class="btn btn-danger"> Sil</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>