@model WebApplication3.Models.galeri
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




<div id="content-wrapper">
    <div class="container-fluid">

        <div class="card mb-3">
            <div class="card-header">

                <h4><i class="fas fa-table"></i></h4> <br />

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("Edit", "Galeri", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <table class="table table-bordered" width="100%" cellspacing="0">





                            <td> Resim</td>
                            <td>


                                <div class="col-md-10">
                                    <input type="file" name="resim" accept=".jpg,.png,.jpeg" class="form-control" width="100" height=" 100" />
                                    @Html.ValidationMessageFor(model => model.resim, "", new { @class = "text-danger" })
                                </div>

                            </td>

                        </table>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" type="submit">Kaydet</button>
                                <button class="btn btn-danger" type="button"><a href="/Galeri/Index">İptal</button>
                            </div>

                        </div>
                    }
                </div>


            </div>
        </div>
    </div>
</div>

